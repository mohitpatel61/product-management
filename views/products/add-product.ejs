<%- contentFor('body') %>
    <div class="container-fluid px-4">
        <h1 class="mt-4">Create product</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item active">Create product</li>
        </ol>

        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-table me-1"></i>
                Create product
            </div>
            <div class="card-body">
                <div id="layoutAuthentication">
                    <div id="layoutAuthentication_content">
                        <main>
                            <div class="container">
                                <div class="row justify-content-center">
                                    <div class="col-lg-7">
                                        <div class="card shadow-lg border-0 rounded-lg mt-5">
                                            <div class="card-header">
                                                <h3 class="text-center font-weight-light my-4">Create product</h3>
                                            </div>
                                            <div class="card-body">

                                                <% if (success || error || (errors && errors.length> 0)) {
                                                    %>
                                                    <div>
                                                        <% if (success) { %>
                                                            <div
                                                                class="alert alert-success <% if (success.length == 0) { %> d-none <% } %>">
                                                                <%= success %>
                                                            </div>

                                                            <% } %>

                                                    </div>
                                                    <div>
                                                        <% if (error) { %>
                                                            <div
                                                                class="alert alert-danger <% if (error.length == 0) { %> d-none <% } %>">
                                                                <%= error %>
                                                            </div>
                                                            <% } %>
                                                    </div>

                                                    <% } %>
                                                        <form action="/products/add-product" method="post" enctype="multipart/form-data"
                                                            accept-charset="utf-8">
                                                            <input type="hidden" name="csrf-token"
                                                                value="<%= csrfToken %>">
                                                            <div class="row mb-3">
                                                                <div class="col-md-6">
                                                                    <div class="form-floating mb-3 mb-md-0">
                                                                        <input class="form-control"
                                                                            value="<%= productData ? productData.title : ''  %>"
                                                                            name="title" id="title" type="text"
                                                                            placeholder="Enter your title" />
                                                                        <label for="title">Title</label>
                                                                        <% if (errors && errors.title) { %>
                                                                            <span style="color: red;">
                                                                                <%= errors.title.msg %>
                                                                            </span>
                                                                            <% } %>

                                                                    </div>
                                                                </div>

                                                            </div>
                                                            <div class="form-floating mb-3">
                                                                <input class="form-control" name="product_price"
                                                                    value="<%= productData ? productData.product_price : ''  %>"
                                                                    id="product_price" type="number"
                                                                    placeholder="Price" />
                                                                <label for="product_price">Product Price</label>
                                                                <% if (errors && errors.product_price) { %>
                                                                    <span style="color: red;">
                                                                        <%= errors.product_price.msg %>
                                                                    </span>
                                                                    <% } %>
                                                            </div>

                                                            <div class="row mb-3">
                                                                <div class="col-md-6">
                                                                    <div class="form-floating mb-3 mb-md-0">
                                                                        <input class="form-control"
                                                                            name="product_number"
                                                                            value="<%= productData ? productData.product_number : ''  %>"
                                                                            id="product_number" type="number"
                                                                            placeholder="Create a number" />
                                                                        <label for="product_number">Product
                                                                            number</label>
                                                                        <% if (errors && errors.product_number) { %>
                                                                            <span style="color: red;">
                                                                                <%= errors.product_number.msg %>
                                                                            </span>
                                                                            <% } %>
                                                                    </div>
                                                                </div>
                                                                <div class="col-md-6">
                                                                    <div class="form-floating mb-3 mb-md-0">
                                                                        <input type="file" class="form-control"
                                                                            name="product_image" id="product_image"
                                                                            type="text" />
                                                                        <label for="product_image">Product image</label>
                                                                    </div>
                                                                </div>
                                                            </div>

                                                            <div class="col-md-12">
                                                                <div class="form-floating mb-3 mb-md-0">
                                                                    <textarea class="form-control" name="description"
                                                                        id="description" type="text"
                                                                        placeholder="Description" /></textarea>
                                                                    <label for="description">Description</label>
                                                                    <% if (errors && errors.description) { %>
                                                                        <span style="color: red;">
                                                                            <%= errors.description.msg %>
                                                                        </span>
                                                                        <% } %>
                                                                </div>
                                                            </div>
                                                            <div class="mt-4 mb-0">
                                                                <div class="d-grid"><button type="submit"
                                                                        class="btn btn-primary btn-block">Create
                                                                        product</button></div>
                                                            </div>
                                                        </form>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </main>
                    </div>

                </div>
            </div>
        </div>
    </div>