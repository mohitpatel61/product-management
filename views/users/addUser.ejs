<%- contentFor('body') %>
    <div class="container-fluid px-4">
        <h1 class="mt-4">Create user</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item active">Create user</li>
        </ol>

        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-table me-1"></i>
                Create user
            </div>
            <div class="card-body">
                <div id="layoutAuthentication">
                    <div id="layoutAuthentication_content">
                        <main>
                            <div class="container">
                                <div class="row justify-content-center">
                                    <div class="col-lg-7">
                                        <div class="card shadow-lg border-0 rounded-lg mt-5">
                                            <div class="card-header">
                                                <h3 class="text-center font-weight-light my-4">Create user</h3>
                                            </div>
                                            <div class="card-body">
                                                <% if (success || error || (errors && errors.length> 0)) {
                                                    %>
                                                    <div>
                                                        <% if (success) { %>
                                                            <div
                                                                class="alert alert-success <% if (success.length == 0) { %> d-none <% } %>">
                                                                <%= success %>
                                                            </div>
                                                   
                                                    <% } %>
        
                                                    </div>
                                                    <div>
                                                        <% if (error) { %>
                                                            <div
                                                                class="alert alert-danger <% if (error.length == 0) { %> d-none <% } %>">
                                                                <%= error %>
                                                            </div>
                                                        <% } %>
                                                    </div>
                                                  
                                                    <% } %>
                                                        <form action="/users/add-user" method="post"
                                                            accept-charset="utf-8">
                                                            <input type="hidden" name ="csrf-token" value="<%= csrfToken %>">
                                                            <div class="row mb-3">
                                                                <div class="col-md-6">
                                                                    <div class="form-floating mb-3 mb-md-0">
                                                                        <input class="form-control"
                                                                            value="<%= userData ? userData.firstName : ''  %>"
                                                                            name="firstName" id="firstName" type="text"
                                                                            placeholder="Enter your first name" />
                                                                        <label for="firstName">First name</label>
                                                                        <% if (errors && errors.first_name) { %>
                                                                            <span style="color: red;"><%= errors.first_name.msg %></span>
                                                                        <% } %>
                                                                
                                                                    </div>
                                                                </div>
                                                                <div class="col-md-6">
                                                                    <div class="form-floating">
                                                                        <input class="form-control"
                                                                            value="<%= userData ? userData.lastName : ''  %>"
                                                                            name="lastName" id="lastName" type="text"
                                                                            placeholder="Enter your last name" />
                                                                        <label for="lastName">Last name</label>
                                                                        <% if (errors && errors.last_name) { %>
                                                                            <span style="color: red;"><%= errors.last_name.msg %></span>
                                                                        <% } %>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="form-floating mb-3">
                                                                <input class="form-control" name="email"
                                                                    value="<%= userData ? userData.email : ''  %>"
                                                                    id="email" type="email"
                                                                    placeholder="name@example.com" />
                                                                <label for="email">Email address</label>
                                                                <% if (errors && errors.email) { %>
                                                                    <span style="color: red;"><%= errors.email.msg %></span>
                                                                <% } %>
                                                            </div>

                                                            <div class="row mb-3">
                                                                <div class="col-md-6">
                                                                    <div class="form-floating mb-3 mb-md-0">
                                                                        <input class="form-control" name="password"
                                                                            value="<%= userData ? userData.password : ''  %>"
                                                                            id="password" type="password"
                                                                            placeholder="Create a password" />
                                                                        <label for="password">Password</label>
                                                                        <% if (errors && errors.password) { %>
                                                                            <span style="color: red;"><%= errors.passwordmsg %></span>
                                                                        <% } %>
                                                                    </div>
                                                                </div>
                                                                <div class="col-md-6">
                                                                    <div class="form-floating mb-3 mb-md-0">
                                                                        <input class="form-control"
                                                                            name="confirmPassword" id="confirmPassword"
                                                                            type="password"
                                                                            placeholder="Confirm password" />
                                                                        <label for="confirmPassword">Confirm
                                                                            Password</label>
                                                                            <% if (errors && errors.confirmPassword) { %>
                                                                                <span style="color: red;"><%= errors.confirmPassword.msg %></span>
                                                                            <% } %>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                    
                                                            <div class="mt-4 mb-0">
                                                                <div class="d-grid"><button type="submit"
                                                                        class="btn btn-primary btn-block">Create
                                                                        user</button></div>
                                                            </div>
                                                        </form>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </main>
                    </div>

                </div>
            </div>
        </div>
    </div>